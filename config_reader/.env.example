# Environment variables configuration
# Load with: source .env or export $(cat .env | xargs)

# Server configuration
APP_SERVER_HOST=127.0.0.1
APP_SERVER_PORT=8080
APP_SERVER_WORKERS=4

# Database configuration
APP_DATABASE_HOST=localhost
APP_DATABASE_PORT=5432
APP_DATABASE_USERNAME=myuser
APP_DATABASE_PASSWORD=mypassword
APP_DATABASE_DATABASE=myapp
APP_DATABASE_MAX_CONNECTIONS=10

# Logging configuration
APP_LOGGING_LEVEL=info
APP_LOGGING_FILE=app.log

# Feature flags
APP_FEATURES_DEBUG_MODE=true
APP_FEATURES_METRICS=false
APP_FEATURES_CACHE=true